<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Alimento Nuevo</h3>
    </div>
    <div class="card-body">
      <form action="/Alimentos/alimento-nuevo" method="POST">
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="Nombre" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="ingredients" class="form-control" placeholder="Ingredientes"></textarea>
        </div>
        <div class="form-group">
          <input type="number" step=".01" name="price" class="form-control" placeholder="Precio" autofocus/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
          <a class="btn btn-danger btn-block" href="/Alimentos">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>