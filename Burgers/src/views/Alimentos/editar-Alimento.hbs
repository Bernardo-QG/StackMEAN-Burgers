{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Comida</h3>
    </div>
    <div class="card-body">
      <form action="/Alimentos/editar-Alimento/{{ alimento._id }}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="name" class="form-control" value="{{ alimento.name }}"/>
        </div>
        <div class="form-group">
          <textarea name="ingredients" class="form-control">{{ alimento.ingredients }}</textarea>
        </div> 
        <div class="form-group">
          <input type="number" step=".01" name="price" class="form-control" value="{{ alimento.price }}"/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
          <a class="btn btn-danger btn-block" href="/Alimentos">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>